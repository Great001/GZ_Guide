<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_tasty_icon"
        android:layout_width="@dimen/lv_item_img_size"
        android:layout_height="@dimen/lv_item_img_size"
        android:clickable="true"
        android:padding="5dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_tasty_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_tasty_icon"
        android:text="广州卤味粉"
        android:textColor="@color/lv_item_title"
        android:textSize="@dimen/lv_item_title_size" />

    <TextView
        android:id="@+id/tv_tasty_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_tasty_name"
        android:layout_below="@id/tv_tasty_name"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="极具广州特色，味道极佳" />

    <TextView
        android:id="@+id/tv_tasty_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_tasty_name"
        android:layout_below="@id/tv_tasty_desc"
        android:layout_marginTop="10dp"
        android:text="avg 20元/份" />

    <TextView
        android:id="@+id/tv_tasty_recommend_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_tasty_name"
        android:layout_below="@id/tv_tasty_price"
        android:layout_marginTop="10dp"
        android:text="推荐指数"
        android:textColor="@color/colorAccent" />

    <RatingBar
        android:id="@+id/rb_tasty_recommend"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_tasty_recommend_rating"
        android:numStars="5"
        android:rating="4.2" />
</RelativeLayout>