<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lhc.android.gz_guide.fragment.MainPageFragment">

    <ScrollView
        android:id="@+id/sv_main_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_pics"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainpage_viewpager_height"
                android:clickable="true"/>

            <GridView
                android:id="@+id/gv_all_options"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/vp_pics"
                android:layout_marginTop="10dp"
                android:numColumns="4" />

            <ListView
                android:id="@+id/lv_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/gv_all_options"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>

