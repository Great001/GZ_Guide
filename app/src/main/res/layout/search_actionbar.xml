<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_search_action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#55BEBEBE"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_search"/>

    <EditText
        android:id="@+id/et_search_places"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_search"
        android:textColor="@color/searchbar_text"
        android:textSize="@dimen/searchbar_text_size"
        android:singleLine="true"
        android:hint="请输入目的地"
        android:background="@drawable/bg_search_action_bar"
        android:textCursorDrawable="@null"
        />

    <ImageView
        android:id="@+id/iv_searchbar_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/remove_search_pressed"
        android:layout_centerVertical="true"
        android:layout_alignRight="@id/et_search_places"
        android:layout_marginRight="5dp"
        />

    <ImageButton
        android:id="@+id/ibtn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/location"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"/>

</RelativeLayout>