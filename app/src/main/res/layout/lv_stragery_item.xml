<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <ImageView
        android:id="@+id/iv_stragery_icon"
        android:layout_width="@dimen/lv_item_img_size"
        android:layout_height="@dimen/lv_item_img_size"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_stragery_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/iv_stragery_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="广州古韵一日游"
        android:textColor="@color/lv_item_title"
        android:textSize="@dimen/lv_item_title_size" />

    <TextView
        android:id="@+id/tv_stragery_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_stragery_title"
        android:layout_below="@id/tv_stragery_title"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLength="150"
        android:maxLines="3"
        android:text="经典广州一日游，带你领略老广州的韵味" />

    <TextView
        android:id="@+id/tv_stragery_readCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_stragery_title"
        android:layout_below="@id/tv_stragery_desc"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/listview_readcount"
        android:drawablePadding="10dp"
        android:text="10000" />

    <TextView
        android:id="@+id/tv_stragery_commentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_stragery_readCount"
        android:drawableLeft="@drawable/listview_commentcount"
        android:drawablePadding="10dp"
        android:text="390" />

</RelativeLayout>