<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_info_background_height">

            <ImageView
                android:id="@+id/iv_user_info_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/home_bg" />

            <com.lhc.android.gz_guide.view.CircleImageView
                android:id="@+id/iv_user_info_avatar"
                android:layout_width="@dimen/avatar_icon_size"
                android:layout_height="@dimen/avatar_icon_size"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/header_big_default" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_info_item_divider_height"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:id="@+id/ll_user_info_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_profile_item_height"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="昵称" />

            <TextView
                android:id="@+id/tv_user_info_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="hancher" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:id="@+id/ll_user_info_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_profile_item_height"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="性别" />

            <TextView
                android:id="@+id/tv_user_info_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="男" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:id="@+id/ll_user_info_age"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_profile_item_height"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="年龄" />

            <TextView
                android:id="@+id/tv_user_info_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="20" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:id="@+id/ll_user_info_job"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_profile_item_height"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="职业" />

            <TextView
                android:id="@+id/tv_user_info_job"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="程序员" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_info_item_divider_height"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:id="@+id/ll_user_info_range"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_profile_item_height"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="等级" />

            <TextView
                android:id="@+id/tv_user_info_range"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="6级" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:id="@+id/ll_user_info_intergral"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_profile_item_height"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="积分" />

            <TextView
                android:id="@+id/tv_user_info_intergral"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="4320" />
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_info_item_divider_height"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:id="@+id/ll_user_info_tel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_profile_item_height"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="电话" />

            <TextView
                android:id="@+id/tv_user_info_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="15630034673" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:id="@+id/ll_user_info_wechat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_profile_item_height"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="微信" />

            <TextView
                android:id="@+id/tv_user_info_wechat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="15630034673" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_info_item_divider_height"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:id="@+id/ll_user_info_addr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_profile_item_height"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="地址" />

            <TextView
                android:id="@+id/tv_user_info_addr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="广州市天河区华南师范大学"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_info_item_divider_height"
            android:background="@color/gray_divider"/>


    </LinearLayout>
</ScrollView>