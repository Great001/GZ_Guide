<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lhc.android.gz_guide.activity.UserReportActivity">

    <EditText
        android:id="@+id/et_user_report"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bg_et_stroke_black"
        android:hint="@string/please_input_your_suggestion"
        android:gravity="start"
        android:padding= "10dp"/>

    <TextView
        android:id="@+id/tv_submit_user_report"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_user_report"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/submit"
        android:background="@drawable/bg_et_stroke_black"/>


</RelativeLayout>
